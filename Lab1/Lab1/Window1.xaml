<Window x:Class="Lab1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#FFD3ECE9">
        <Label Content="ДАНІ ПРО СТУДЕНТІВ" Margin="260,20,260,345" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="Data" TextWrapping="Wrap" Margin="40,65,40,160" FontSize="14" BorderBrush="{x:Null}"/>
        <Button x:Name="AddStudent" Content="ДОДАТИ ІНФОРМАЦІЮ" Margin="40,280,405,90" Background="#FFC9F1C1" FontSize="18" Click="AddStudent_Click"/>
        <Button x:Name="DeleteStudent" Content="ВИДАЛИТИ ІНФОРМАЦІЮ" Margin="405,280,40,90" Background="#FFE8B3B3" FontSize="18" Click="DeleteStudent_Click"/>
        <Button x:Name="ToMainWindow" Content="ГОЛОВНА СТОРІНКА" Click="ToMainWindow_Click" Background="White" Margin="40,350,40,30" FontSize="20"/>

    </Grid>
</Window>
