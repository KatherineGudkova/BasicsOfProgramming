<Window x:Class="PR3.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3"
        mc:Ignorable="d"
        Title="AddUser" Height="200" Width="350">
    <Grid Background="#FFE9E9EA">
        <Label Content="НОВИЙ КОРИСТУВАЧ" FontSize="18" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"  />
        <Label Content="ЛОГІН" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,58,0,0"  />
        <TextBox x:Name="Login" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="20" Margin="112,61,30,0"/>
        <Button x:Name="OK" Content="ОК" Margin="30,110,0,0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" Height="40" Background="#FFD4F7AC" Click="OK_Click"/>
        <Button x:Name="Back" Content="НАЗАД" Margin="180,110,0,0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" Height="40" Background="#FFEFA4A4" Click="Back_Click"/>
    </Grid>
</Window>
